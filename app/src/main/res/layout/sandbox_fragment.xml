    <TextView
        android:id="@+id/captureText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="38dp"
        android:layout_marginTop="153dp"
        android:text="yValue" />

    <TextView
        android:id="@+id/yValueAfterReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/resetButton2"
        android:layout_alignTop="@+id/tv_xValue"
        android:text="yValueAfterReset" />
